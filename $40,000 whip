void draw()
{
 drawCar1(); 
 
 //drawCar2();
}

// Star Decal
 void star(float starX, float starY, float radius1, float radius2, int points)
 {
  float angle = TWO_PI / points;
  float halfAngle = angle/2.0;
  
  beginShape();
  for (float a = 0; a < TWO_PI; a += angle) {
    float sx = starX + cos(a) * radius2;
    float sy = starY + sin(a) * radius2;
    vertex(sx, sy);
    sx = starX + cos(a+halfAngle) * radius1;
    sy = starY + sin(a+halfAngle) * radius1;
    vertex(sx, sy);
  }
  
  endShape(CLOSE);
}
