  strokeWeight(3);
  stroke(10);
  line(carX + 120, carY, carX + 123, carY - 48);
  line(carX - 30, carY, carX + 20, carY - 53);
  
  // Body
  // Front
  stroke(0);
  strokeWeight(1);
  fill(210);
  rect(carX - 120, carY - 28, 50, 20);
